<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <error-page>
        <location>/error</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/forbidden</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/not_found</location>
    </error-page>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.kozel.bookstore.web.filter.WebAuthenticationFilter</filter-class>
        <init-param>
            <param-name>publicPaths</param-name>
            <param-value>
                /,
                /books, /books/,
                /books/\d+, /books/\d+/,
                /register, /register/
            </param-value>
        </init-param>

        <init-param>
            <param-name>privatePaths</param-name>
            <param-value>
                /logout,
                /users, /users/.*,
                /orders, /orders/.*,
                /books/add, /books/add/,
                /books/\d+/edit, /books/\d+/edit/,
                /books/\d+/delete, /books/\d+/delete/
            </param-value>
        </init-param>

        <init-param>
            <param-name>authPaths</param-name>
            <param-value>
                /login, /login/,
            </param-value>
        </init-param>

        <init-param>
            <param-name>staticResources</param-name>
            <param-value>
                /images/.*,
                /css/.*,
                /js/.*,
                .*\.css,
                .*\.js,
                .*\.png,
                .*\.jpg,
                .*\.bmp
            </param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.kozel.bookstore.web.filter.WebAuthorizationFilter</filter-class>

        <init-param>
            <param-name>superAdminPaths</param-name>
            <param-value>
                ^/users/delete/.*
            </param-value>
        </init-param>
        <init-param>
            <param-name>superAdminRoles</param-name>
            <param-value>SUPER_ADMIN</param-value>
        </init-param>

        <init-param>
            <param-name>adminPaths</param-name>
            <param-value>
                ^/users/edit/.*,
            </param-value>
        </init-param>
        <init-param>
            <param-name>adminRoles</param-name>
            <param-value>SUPER_ADMIN,ADMIN</param-value>
        </init-param>

        <init-param>
            <param-name>managerPaths</param-name>
            <param-value>
                ^/books/edit/.*,
                ^/books/delete/.*,
                ^/books/add?, ^/books/add/.*,
                ^/orders/?, ^/orders/.*,
                ^/users/?, ^/users/\d+/?
            </param-value>
        </init-param>
        <init-param>
            <param-name>managerRoles</param-name>
            <param-value>MANAGER,ADMIN,SUPER_ADMIN</param-value>
        </init-param>

        <init-param>
            <param-name>customerPaths</param-name>
            <param-value>
                ^/profile/.*,
                ^/orders/my
            </param-value>
        </init-param>
        <init-param>
            <param-name>customerRoles</param-name>
            <param-value>CUSTOMER,MANAGER,ADMIN,SUPER_ADMIN</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/orders/*</url-pattern>
        <url-pattern>/users/*</url-pattern>
        <url-pattern>/books/*</url-pattern>
        <url-pattern>/profile/*</url-pattern>
    </filter-mapping>

</web-app>